<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maguirrem.matchmaker"
    android:versionCode="2"
    android:versionName="0.2" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.maguirrem.matchmaker.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.maguirrem.matchmaker.Receiver"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.maguirrem.matchmaker.Prefs"
            android:label="@string/app_name" />
        <activity
            android:name="com.maguirrem.matchmaker.Matches"
            android:label="@string/app_name" />
        <activity
            android:name="com.maguirrem.matchmaker.AddMatch"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="com.maguirrem.matchmaker.People"
            android:label="@string/app_name" />
        <activity
            android:name="com.maguirrem.matchmaker.AddPerson"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="com.maguirrem.matchmaker.AddGroup"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="com.maguirrem.matchmaker.About"
            android:label="@string/app_name" />
        <activity
            android:name="com.bvw.android_library.Message_Listview"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>